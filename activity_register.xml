<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images4"
    >

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editusername_reg"
        android:hint="username"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/editname"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editpassword_reg"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/editusername_reg"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editpassword_reg2"
        android:hint="password"
        android:layout_below="@+id/editpassword_reg"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editemail"
        android:hint="email"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editpassword_reg2"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editname"
        android:hint="your name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editcontact_no"
        android:hint="contact no"
        android:inputType="number"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/editemail"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        android:id="@+id/buttonRegister_reg"
        android:layout_below="@+id/editcontact_no"
        android:layout_alignParentStart="true"
        android:layout_marginTop="48dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
