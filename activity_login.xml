<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/images4"
    >

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextusername"
        android:hint="username"
        android:layout_marginBottom="89dp"
        android:layout_alignBottom="@+id/editTextpwd"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editTextpwd"
        android:hint="password"
        android:inputType="textPassword"
        android:layout_above="@+id/btn_login"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:id="@+id/btn_login"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRATION"
        android:textColor="@color/dark_purple_A700"
        android:id="@+id/btnregister"
        android:layout_marginTop="97dp"
        android:layout_below="@+id/btn_login"
        android:layout_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text=" User    Login"
        android:textSize="20dp"
        android:textColor="@color/teal_A700"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:layout_above="@+id/editTextusername"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnregister"
        android:layout_marginStart="32dp"
        android:text="Havent Registered Yet! ?"
        android:textStyle="bold"
        android:textColor="@color/deep_orange_A700"/>
</RelativeLayout>
